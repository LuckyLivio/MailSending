# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# 发件人账号（也作为默认收件人）
SMTP_USER=your.email@gmail.com
# 如果是 Gmail，建议使用 App Password 而不是主密码
SMTP_PASS=your_app_password_or_smtp_password

# 测试收件人；默认发给自己
TO_EMAIL=your.email@gmail.com

# 发送控制
SEND_COUNT=5
DELAY_SEC=2.0

# 是否让每封邮件主题带序号（true/false）
SUBJECT_ADD_INDEX=true

# 是否希望每封邮件 body 完全相同（true/false）
IDENTICAL_BODY=false

